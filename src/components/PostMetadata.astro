---
interface Props {
	class?: string
	date: Date
	tags: string[]
	category: string
	hideTagsForMobile?: boolean
}
const { date, tags, category, hideTagsForMobile } = Astro.props
const className = Astro.props.class
---

<div
	class:list={["flex flex-wrap items-center gap-4 gap-x-4 gap-y-2", className]}
>
	<h2>{date}</h2>
	<h2>{tags}</h2>
	<h2>{category}</h2>
</div>
