---
import type { SocialIconName } from "@/types/icon"
import Code from "./Code.astro"
import Github from "./Github.astro"
import LinkedIn from "./LinkedIn.astro"

interface Props {
	icon: SocialIconName
	size?: string
	class?: string
}

const { icon, size = "24", class: className } = Astro.props
---

{icon === "github" && <Github size={size} class:list={[className]} />}
{icon === "code" && <Code size={size} class:list={[className]} />}
{icon === "linkedin" && <LinkedIn size={size} class:list={[className]} />}
