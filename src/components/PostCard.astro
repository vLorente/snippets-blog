---
import PostMetadata from "@components/PostMetadata.astro"

interface Props {
	class?: string
	entry: any
	title: string
	url: string
	date: Date
	tags: string[]
	category: string
	image: string
	description: string
}

const { title, url, date, tags, category, image, description } = Astro.props

const className = Astro.props.class
const hasCover = image !== undefined && image !== null && image !== ""
---

<div
	class:list={[
		"relative flex w-full flex-col-reverse overflow-hidden rounded-lg md:flex-col",
		className,
	]}
>
	<div
		class:list={[
			"relative pb-6 pl-6 pr-6 pt-6 md:pl-9 md:pr-2 md:pt-7",
			{
				"w-full md:w-[calc(100%_-_52px_-_12px)]": !hasCover,
				"w-full md:w-[calc(100%_-_var(--coverWidth)_-_12px)]": hasCover,
			},
		]}
	>
		<PostMetadata
			date={date}
			tags={tags}
			category={category}
			hideTagsForMobile={true}
		/>
	</div>
</div>
